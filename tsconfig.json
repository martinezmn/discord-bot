{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "scripts/**/*", "database/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
